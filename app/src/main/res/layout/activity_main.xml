<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.leaguequizz.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_margin_s"
            android:orientation="vertical">

            <EditText
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:hint="@string/enter_your_name"
                android:inputType="text" />

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="@dimen/cardCorners">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/padding_margin_ss"
                        android:layout_weight="1"
                        android:fontFamily="@font/audiowide"
                        android:text="@string/who_says_this_joke"
                        android:textColor="@color/textColor"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/audiowide"
                        android:text="@string/q1"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="23sp" />

                    <RadioGroup
                        android:id="@+id/joke"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/right_to_left"
                        android:paddingStart="@dimen/padding_margin">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/diana"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/diana"
                            android:textColor="@color/ansColor" />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/galio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/galio"
                            android:textColor="@color/ansColor" />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/heimer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/heimerdinger"
                            android:textColor="@color/ansColor" />
                    </RadioGroup>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="@dimen/cardCorners">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/padding_margin"
                        android:layout_weight="1"
                        android:fontFamily="@font/audiowide"
                        android:paddingEnd="@dimen/right_to_left"
                        android:paddingStart="@dimen/padding_margin_s"
                        android:text="@string/which_of_these_champions_playing_adc"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="23sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding_margin"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/right_to_left"
                        android:paddingStart="@dimen/padding_margin">

                        <CheckBox
                            android:id="@+id/vayne"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/vayne"
                            android:textColor="@color/ansColor" />

                        <CheckBox
                            android:id="@+id/kalista"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/kalista"
                            android:textColor="@color/ansColor" />

                        <CheckBox
                            android:id="@+id/ahri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/ahri"
                            android:textColor="@color/ansColor" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="@dimen/cardCorners">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/padding_margin"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:fontFamily="@font/audiowide"
                        android:text="@string/who_is_the_brother_to_this_champ"
                        android:textColor="@color/textColor"
                        android:textSize="17sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/dar_res" />

                    <RadioGroup
                        android:id="@+id/brother"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/right_to_left"
                        android:paddingStart="@dimen/padding_margin">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/maokai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/maokai"
                            android:textColor="@color/ansColor" />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/nasus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/nasus"
                            android:textColor="@color/ansColor" />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/draven_b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/draven"
                            android:textColor="@color/ansColor" />
                    </RadioGroup>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card4"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="@dimen/cardCorners">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/padding_margin_s"
                        android:layout_weight="1"
                        android:fontFamily="@font/audiowide"
                        android:text="@string/what_is_common_between_these_items"
                        android:textColor="@color/textColor"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/botrk_item"
                            tools:ignore="NestedWeights" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/rapid_firecannon_item" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/nashors_tooth_item" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/phantom_dancer_item" />
                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/right_to_left"
                        android:paddingStart="@dimen/padding_margin">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/atk_spd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/attack_speed"
                            android:textColor="@color/ansColor" />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/armor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/armor"
                            android:textColor="@color/ansColor" />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/health"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/health"
                            android:textColor="@color/ansColor" />
                    </RadioGroup>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card5"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="@dimen/cardCorners">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/audiowide"
                        android:paddingTop="@dimen/padding_margin_s"
                        android:text="@string/who_says_this_quote"
                        android:textColor="@color/textColor"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/audiowide"
                        android:paddingEnd="@dimen/right_to_left"
                        android:paddingStart="@dimen/padding_margin_m"
                        android:text="@string/beware_a_man_with_nothing_to_lose"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="25sp" />

                    <EditText
                        android:id="@+id/q5_varus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/audiowide"
                        android:hint="@string/answer_here"
                        android:inputType="text"
                        android:textAlignment="center"
                        android:textColor="@color/ansColor"
                        android:textColorHint="@color/ansColor" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card6"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="@dimen/cardCorners">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/padding_margin"
                        android:layout_weight="1"
                        android:fontFamily="@font/audiowide"
                        android:text="@string/who_counter_this_champion"
                        android:textColor="@color/textColor"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/nasus_res" />

                    <RadioGroup
                        android:id="@+id/nasus_counter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/right_to_left"
                        android:paddingStart="@dimen/padding_margin">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/akali"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/akali"
                            android:textColor="@color/ansColor" />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/teemo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/teemo"
                            android:textColor="@color/ansColor" />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/braum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/braum"
                            android:textColor="@color/ansColor" />
                    </RadioGroup>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card7"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="@dimen/cardCorners">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/padding_margin"
                        android:layout_weight="1"
                        android:fontFamily="@font/audiowide"
                        android:paddingEnd="@dimen/padding_margin_m"
                        android:paddingStart="@dimen/padding_margin_m"
                        android:text="@string/which_of_these_champions_can_disappear"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="22sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding_margin"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/right_to_left"
                        android:paddingStart="@dimen/padding_margin">

                        <CheckBox
                            android:id="@+id/shaco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/shaco"
                            android:textColor="@color/ansColor" />

                        <CheckBox
                            android:id="@+id/twitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/twitch"
                            android:textColor="@color/ansColor" />

                        <CheckBox
                            android:id="@+id/evelynn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/evelynn"
                            android:textColor="@color/ansColor" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card8"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="@dimen/cardCorners">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/padding_margin"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:fontFamily="@font/audiowide"
                        android:text="@string/in_which_lane_this_champion_can_play"
                        android:textColor="@color/textColor"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/vlad_res" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/right_to_left"
                        android:paddingStart="@dimen/padding_margin">

                        <CheckBox
                            android:id="@+id/top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/top"
                            android:textColor="@color/ansColor"
                            tools:ignore="NestedWeights" />

                        <CheckBox
                            android:id="@+id/mid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/mid"
                            android:textColor="@color/ansColor" />

                        <CheckBox
                            android:id="@+id/bot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/bot"
                            android:textColor="@color/ansColor" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card9"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="@dimen/cardCorners">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/audiowide"
                        android:paddingTop="@dimen/padding_margin_s"
                        android:text="@string/who_says_this_quote"
                        android:textColor="@color/textColor"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/audiowide"
                        android:paddingEnd="@dimen/right_to_left"
                        android:paddingStart="@dimen/padding_margin_m"
                        android:text="@string/seems_to_be_blood_everywhere_i_go"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="25sp" />

                    <EditText
                        android:id="@+id/q9_draven"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/audiowide"
                        android:hint="@string/answer_here"
                        android:inputType="text"
                        android:textAlignment="center"
                        android:textColor="@color/ansColor"
                        android:textColorHint="@color/ansColor" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card10"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="@dimen/cardCorners">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/padding_margin"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:fontFamily="@font/audiowide"
                        android:text="@string/this_champion_is_melee_or_ranged"
                        android:textColor="@color/textColor"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/gnar_res" />

                    <RadioGroup
                        android:id="@+id/gnar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/right_to_left"
                        android:paddingStart="@dimen/padding_margin">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/ranged"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/ranged"
                            android:textColor="@color/ansColor" />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/melee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
